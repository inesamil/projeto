<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ps.leic.isel.pt.gis">

    <!-- Add permission for NFC -->
    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/OrangeTheme">
        <activity android:name=".uis.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".uis.activities.LoginActivity"
            android:theme="@style/OrangeTheme" />
        <activity android:name=".uis.activities.RegisterActivity" />
        <activity android:name=".uis.activities.InitialSetupActivity" />
        <activity
            android:name=".uis.activities.RecipesActivity"
            android:label="@string/recipesLabel"
            android:theme="@style/OrangeTheme" />
        <activity android:name=".uis.activities.AllergiesActivity" />
        <activity android:name=".uis.activities.HomeActivity" />
        <activity android:name=".uis.activities.NFCActivity">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="ext"
                    android:mimeType="text/plain"
                    android:pathPrefix="/pt.isel.leic.ps:simulator"
                    android:scheme="vnd.android.nfc" />
            </intent-filter>
        </activity>
    </application>

</manifest>