<style>
    .card {
        margin-top: 1vh;
        margin-left:auto; 
        margin-right:auto;
        background: #ff9800;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 40%;
    }

    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }

    .button {
        border-radius: 50px;
        padding: 10px 15px;
        text-align: right;
        text-decoration: none;
        display: inline-block;
        font-size: 12px;
        margin: 4px 2px;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
        cursor: pointer;
    }

    .btnorange {
        background-color: #ff9800;
        color: black;
        border: 2px solid #ff9800;
    }

    .btnorange:hover {
        background-color: white; 
        color: black; 
        border: 2px solid #ff9800;
    }

    * {
  box-sizing: border-box;
}

#myInput {
  background-repeat: no-repeat;
  width: 25%;
  font-size: 16px;
  padding: 10px 18px 10px 38px;
  border: 1px solid #ff9800;
  float: right;
}

#myUL {
  list-style-type: none;
  padding: 0;
  margin: 0;
}

#myUL li a {
  border: 1px solid #ddd;
  margin-top: -1px; /* Prevent double borders */
  background-color: #f6f6f6;
  padding: 12px;
  text-decoration: none;
  font-size: 18px;
  color: black;
  display: block
}

#myUL li a:hover:not(.header) {
  background-color: #eee;
}

</style>
<div>
    <h1>Lists</h1>
    <input type="text" id="myInput" onkeyup="filterFunction()" placeholder="Search for names.." title="Type in a name">
    <div style="text-align: left; padding-right: 75px;">
        <button class="button btnorange"><span class='glyphicon glyphicon-plus' style='font-size:10px;'></span></button>
        <h3 style="display: inline; font-weight:bold">Add new list</h3>
    </div>

    <div id="myUL">
        {{#each lists}}
            <li id="divCard" class="card">
                <a href="/lists/{{listName}}" >
                    <div style="text-align: center;">
                        <h4 style="font-size:30px; display:inline-block; color: black"> {{listName}}</h4>
                    </div>
                </a>
            </li>
            <br>
        {{/each}}
    </div>
</div>

<script>
function filterFunction() {
    var input, filter, div, li, a, i;
    input = document.getElementById("myInput");
    filter = input.value.toUpperCase();
    div = document.getElementById("myUL");
    li = div.getElementsByTagName("li");
    for (i = 0; i < li.length; i++) {
        a = li[i].getElementsByTagName("a")[0];
        if (a.innerHTML.toUpperCase().indexOf(filter) > -1) {
            li[i].style.display = "";
        } else {
            li[i].style.display = "none";

        }
    }
}
</script>