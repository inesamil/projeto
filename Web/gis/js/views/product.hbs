<style>
    .card {
        margin-top: 1vh;
        margin-left:auto; 
        margin-right:auto;
        background: #E0E0E0;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 80%;
    }

    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }
</style>

<div>
    <h1>{{product}}</h1>
    <h3>{{productName}}</h3>
    <h5>{{quantity}}</h5>
    <h5 style="text-align: right;">Qt.{{units}}</h5>

    <div>
        <div class="card">
            <details>
                <summary style="font-size:22px;">{{allergens.title}}</summary>
                {{#each allergens.pdtAllergens}}
                    <p style="text-indent: 5%; color: black"> {{allergen}}</p>
                {{/each}}
            </details>  
        </div>
        <div class="card">
            <details>
                <summary style="font-size:22px;">{{expirationDate.title}}</summary>
                {{#each expirationDate.pdtexpdate}}
                    <p style="text-indent: 5%;color: black"> {{units}} {{text}} {{date}}</p>
                {{/each}}
            </details>  
        </div>
        <div class="card">
            <details>
                <summary style="font-size:22px;">{{storages.title}}</summary>
                {{#each storages.pdtstorages}}
                    <p style="text-indent: 5%;color: black"> {{units}} {{text}} {{local}}</p>
                {{/each}}
            </details>  
        </div>
        <div class="card">
            <details>
                <summary style="font-size:22px;">{{description.title}}</summary>
                <p style="text-indent: 5%;color: black">{{description.text}}</p>
            </details>  
        </div>
        <div class="card">
            <details>
                <summary style="font-size:22px;">{{movements.title}}</summary>
                <p style="text-indent: 5%;color: black">{{movements.text}}</p>
            </details>  
        </div>
        <br>
    </div>
</div>